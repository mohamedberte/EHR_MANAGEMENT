<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../part/head'); %>
</head>
<body class="container">

<header>
  <%- include('../part/header'); %>
</header>

<main class="main">
    <div class="container">
        <div class="row">
          <div class="col">
                      <div class="title-pool">
                        <h5> Pool Connection </h5>
                        <button type="button" id='star-pool' class="button-pool-title"> Launch pool </button>
                        <button type="button" id='stop-pool'class="button-pool-title"> Stop pool </button>
                      </div>

                      <div class="col">
                        <div class="row">
                          <div class="col">
                            <div class="title-wallet">
                              <h5> Wallet Information </h5>
                              <p>Handler : <b><% if (info_wallet) { %>
                                <%= info_wallet %>
                              <% } %> </b></p>

                              <p>DID : <b><% if (info_did) { %>
                                <%= info_did %>
                              <% } %> </b></p>

                              <p>Public key : <b><% if (info_verkey) { %>
                                <%= info_verkey %>
                              <% } %> </b></p>
                          </div>
                          <div class="col"></div>
                        </div>
                        </div>
                      </div>
                      
                      <div class="information-pool">
                        <h6>Information</h6>
                        <p>Pool Handle : <i id="poolhandle"></i></p>
                        <p>Pool Name : <i id="poolname"></i></p>
                        <button type="button" id='refresh-information'> Refresh </button>
                  <div id="table-wrapper">
                    <div id="table-scroll">
                        <table id="schema-table" class="table table-striped table-bordered table-sm "  cellspacing="0"
                        width="100%">
                        <thead>
                          <tr>
                            <th class="th-sm">No
                            </th>
                            <th class="th-sm">Alias
                            </th>
                            <th class="th-sm">Node Ip
                            </th>
                            <th class="th-sm">Node Port
                            </th>
                            <th class="th-sm">Client Ip
                            </th>
                            <th class="th-sm">Client Port
                            </th>
                            <th class="th-sm">Services
                            </th>
                            <th class="th-sm">Did
                            </th>
                            <th class="th-sm">Public key
                            </th>
                            
                          </tr>
                        </thead>
                        <tbody>

                        </tbody>
                        </table>
                      </div>
                    </div>
                  </div>
            </div>
          <div class="w-100"></div>

          <div class="col">
            
              <div class="information-pool">
                <h5>Role management</h5>
                
                <div class="row">
                  <div class="col">
                    <p>Add new role :</p>
                    <form>
                      <label> Steward information</label>
                      <div>
                        
                        <input type="text" id="wallet" name="wallet" placeholder="Steward did" value=<% if (info_wallet) { %>
                          <%= info_wallet %>
                        <% } %> disabled>
                      </div>  
                      <div>
                          <input type="text" id="steward_did" name="steward_did" placeholder="Steward did" value=<% if (info_did) { %>
                            <%= info_did %>
                          <% } %> disabled>
                      </div>
                      
                      <div>
                        <input type="text" id="steward_verkey" name="steward_verkey" placeholder="Verkey Steward" value=<% if (info_verkey) { %>
                          <%= info_verkey %>
                        <% } %> disabled>
                    </div>
                    <label> New user information</label>
                      <div>
                          <input type="text" id="did" name="did" placeholder="Insérer le DID" required>
                      </div>
                      <div>
                          <input type="text" id="verkey" name="verkey" placeholder="Insérer la clé de vérification" required>
                      </div>
                      <div>
                        <input type="text" id="alias" name="alias" placeholder="Alias" required>
                    </div>
                    
                      <div>
                        <select name="role" id="role_type">
                          <option value="TRUST_ANCHOR">TRUST ANCHOR</option>
                          <option value="STEWARD">STEWARD</option>
                          <option value="ENDORSER">ENDORSER</option>
                          <option value="NETWORK_MONITOR">NETWORK MONITOR</option>
                        </select>
                      </div>
                      <p></p>
                      <button type="button" id='add-role' class=""> Add </button>
                  <input type="reset">
                  </form>
                  
                  </div>
                


                <div class="col">
                  <p>Verification :</p>
                  <!-- input tag -->
                  <input id="searchbar" type="text"
                  name="search" placeholder="Enter un DID">
                  <button type="button" id='search_role' class=""> Search </button>

                  <div id="table-wrapper">
                    <div id="table-scroll">
                        <table id="role-table" class="table table-striped table-bordered table-sm "  cellspacing="0"
                        width="100%">
                        <thead>   
                          <tr>
                            <th class="th-sm">ID
                            </th>
                            <th class="th-sm">DID
                            </th>
                            <th class="th-sm">Public Key
                            </th>
                            <th class="th-sm">Rôle
                            </th>
                          </tr>
                        </thead>
                        <tbody>

                        </tbody>
                        </table>
                    </div>
                  </div>
                </div>

                
              </div>

              </div>
          </div>
        </div>
      </div>

</main>

<footer>
  <%- include('../part/footer'); %>
</footer>

<style>

.block-search{
  width: 100%;
}

.role-form{
  flex-direction: column;
  display: flex;
  border: 1px solid black;
  width: 100%;
}
.main {
    margin-top: 1%;
}

.th-sm{
  text-align: center;
}

.title-wallet{
  display:flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  background-color: gainsboro;
  padding: 5%;
  color: black;
  border-radius: 5px;
  margin-bottom: 5%;
  margin-bottom: 3%;
}


#table-wrapper {
  position:relative;
}
#table-scroll {
  height:150px;
  overflow:auto;  
  margin-top:20px;
}
.information-pool{
  position: relative;
  display: flex;
  flex-direction:column;
  align-items: left;
  background-color: gainsboro;
  color: black;
  width: 100%;
  padding: 1%;
  margin-bottom: 10px;
}
.information-pool > .row{
  margin-top: 10px ;
  margin-bottom: 10px;
}

.refresh-information{
  position: absolute;
  width: 20%;
}

.title-pool{
  display:flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  position: relative;
  width: 100%;
  background-color: gainsboro;
  padding: 3%;
  color: black;
  border-radius: 5px;
  margin-bottom: 5%;
  margin-bottom: 1%;
}
.title-pool>h5{
  position: absolute;
  left: 0;
  margin-left: 2%;
}
.button-pool-title{
  position: absolute;
  margin-right: 2%;
}
button:hover{
  background-color: whitesmoke;
  color: gray;
}
#stop-pool{
  right: 0;
}
#star-pool{
  right: 11%;
}
button {
    padding: 5px 5px;
    background: gray;
    color: #fff;
    border: none;
    border: 0px solid rgba(0,0,0,0.1);
    border-radius: 5px;
}
</style>

